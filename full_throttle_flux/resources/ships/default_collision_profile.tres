[ext_resource type="Script" path="res://scripts/ships/ship_collision_profile.gd" id="1_script"]

[resource]
script = ExtResource("1_script")

# Classification - v5.4: Much more forgiving angles for racing
rear_end_angle_threshold = 70.0
head_on_angle_threshold = 50.0
rear_end_speed_diff_min = 2.0
min_collision_speed = 3.0

# Rear-End (bumper drafting viable) - v5.3: Bidirectional support
rear_end_attacker_brake = 0.10
rear_end_victim_boost = 0.30
rear_end_max_boost = 18.0
rear_end_cooldown = 0.5

# Side-Swipe
sideswipe_speed_loss = 0.08
sideswipe_lateral_force = 12.0
sideswipe_lateral_strength = 0.4

# Head-On
head_on_speed_loss = 0.25
head_on_separation_force = 18.0
head_on_stun_multiplier = 1.5

# Velocity Limits (CRITICAL - prevents explosions) - v5.1: More conservative
max_speed_gain = 20.0
max_speed_loss = 30.0
max_lateral_push = 12.0

# Forward-Bias (keeps ships racing forward)
forward_bias_strength = 0.75
lateral_damping = 0.3

# Collision Stun
stun_enabled = true
stun_duration = 0.35
stun_grip_multiplier = 0.25
stun_speed_threshold = 40.0

# Rotation (optional, subtle)
rotation_enabled = true
rotation_strength = 0.6
max_rotation_degrees = 25.0

# Contact (gentle separation when overlapping) - v5.1: Reduced separation force
contact_distance = 3.5
separation_force = 10.0
max_separation_speed = 10.0
contact_timeout = 0.15

# Feedback
shake_enabled = true
shake_intensity = 0.4
shake_speed_threshold = 15.0
sound_speed_threshold = 5.0
